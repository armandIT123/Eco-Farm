<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoFarm.DiscoverPage"
             xmlns:local="clr-namespace:EcoFarm"
             Title="DiscoverPage">

    <Grid RowDefinitions="60, 30, *" Margin="20">

        <CollectionView ItemsSource="{Binding Suppliers}" Grid.Row="3">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <local:LargeImageBox MainImage="{Binding Image, Mode=TwoWay}"  HeightRequest="250" SupplierName="{Binding Name, Mode=TwoWay}" Rating="{Binding Rating, Mode=TwoWay}" Margin="0, 10, 0, 10"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>