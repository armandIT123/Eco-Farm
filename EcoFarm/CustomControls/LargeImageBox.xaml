<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EcoFarm"
             x:Class="EcoFarm.LargeImageBox">

    <Border Stroke="Transparent" StrokeThickness="0" StrokeShape="RoundRectangle 10,10,10,10" Background="White">
        <Grid RowDefinitions="*, 25, 30">
            <Image Grid.Row="0" Source="{Binding MainImage}" VerticalOptions="Fill" HorizontalOptions="Fill" Margin="0, 0, 0, 10"/>
            <local:RatingDisplayer Grid.Row="0" Margin="10, 10, 0, 0" Rating="{Binding Rating}" ZIndex="1"/>
            
            <Label Grid.Row="1" Text="{Binding Name}" Margin="10, 0, 0, 0"/>
        
        </Grid>
    </Border>
</ContentView>
