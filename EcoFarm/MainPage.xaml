<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EcoFarm"
             x:Class="EcoFarm.MainPage">

    <Grid RowDefinitions="60, 30, *">
        <Label Grid.Row="0" Text="SEARCH"/>
        <Entry Grid.Row="0" Placeholder="Search..."/>

        <ListView x:Name="listBox" Grid.Row="2" ItemsSource="{Binding Suppliers}" SelectionMode="Single" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:LargeImageBox MainImage="{Binding Ceva}" SupplierName="{Binding Name}" Rating="{Binding Rating}" Margin="0, 10, 0, 10"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
