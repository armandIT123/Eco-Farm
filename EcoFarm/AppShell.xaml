<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EcoFarm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EcoFarm"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarUnselectedColor="Black"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True"
    Shell.TabBarForegroundColor="#4B8E4B"
    Shell.TabBarTitleColor="Black"
    Title="EcoFarm">

    <TabBar>
        <ShellContent Title="Acasă"     ContentTemplate="{DataTemplate local:MainPage}"     Route="MainPage"     Icon="home.png"   Style="{x:StaticResource Key=TabBar}"/>
        <ShellContent Title="Descoperă" ContentTemplate="{DataTemplate local:DiscoverPage}" Route="DiscoverPage" Icon="search.png" />
        <ShellContent Title="Coș"       ContentTemplate="{DataTemplate local:BasketPage}"   Route="BasketPage"   Icon="cos.png"   />
        <ShellContent Title="Favorite"  ContentTemplate="{DataTemplate local:MainPage}"     Route="FavoritePage" Icon="heart.png"/>
        <ShellContent Title="Profil"    ContentTemplate="{DataTemplate local:MainPage}"     Route="ProfilePage"  Icon="user.png"/>
    </TabBar>

</Shell>
